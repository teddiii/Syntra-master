        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SyntraDesktop"
        mc:Ignorable="d"
        Title="LoginWindow" Height="286.454" Width="343.028" WindowStyle="None" WindowStartupLocation="CenterScreen" Topmost="True">
